<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FronEndProyecto.vistas.SectionsPage"
             BackgroundImageSource="https://i.pinimg.com/736x/46/c9/21/46c921ba69d71bb284cfc5e2e6a2f4a9.jpg">
    <ContentPage.Content>
        <Grid Padding="15" RowSpacing="20" ColumnSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Título de la página -->
            <Label 
                Text="Elige una sección"
                 FontAttributes="Bold"
                   FontSize="30"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"
                   Grid.Row="0"
                   Grid.ColumnSpan="2" />

            <!-- Sección 1 -->
            <StackLayout Margin="10" Grid.Row="1" Grid.Column="0">
                <Frame Padding="15"
                       HasShadow="True"
                       BackgroundColor="White"
                       BorderColor="LightGray"
                       CornerRadius="10"
                       VerticalOptions="Start"
                       HorizontalOptions="FillAndExpand">
                    <Label Text="Lección 1"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="DarkSlateGray"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="seccion1" />
                    </Frame.GestureRecognizers>
                </Frame>
            </StackLayout>

            <!-- Sección 2 -->
            <StackLayout Margin="10" Grid.Row="1" Grid.Column="1">
