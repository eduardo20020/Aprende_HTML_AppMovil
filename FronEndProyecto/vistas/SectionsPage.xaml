<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FronEndProyecto.vistas.SectionsPage"
             BackgroundImageSource="https://i.pinimg.com/564x/14/67/4e/14674e94edd993f01d7580417e401b1e.jpg">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20">
            <!-- Título de la página -->
            <Label 
                Text="Bienvenido!"
                x:Name="lblInicial"
                FontAttributes="Bold"
                FontSize="30"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,30,0,20" />

            <Label 
                Text="Bienvenido!"
                x:Name="lblProgreso"
                FontAttributes="Bold"
                FontSize="30"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Margin="0,30,0,20" />
            <Button Text="Cambiar de cuenta" Clicked="cambiarCuenta" HorizontalOptions="Center"/>
            <Button Text="ir al dashboard" Clicked="irDashboard" HorizontalOptions="Center"/>

            <!-- Contenedor para las secciones -->
            <StackLayout Spacing="20">
                <!-- Fila 1 -->
                <StackLayout Orientation="Horizontal" Spacing="20">
                    <!-- Sección 1 -->
                    <Frame Padding="15"
                           HasShadow="True"
                           BackgroundColor="White"
                           BorderColor="LightGray"
                           CornerRadius="15"
                           VerticalOptions="Start"
                           HorizontalOptions="FillAndExpand"
                           Margin="10">
                        <Label Text="Lección 1"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="DarkSlateGray"
                               VerticalOptions="Center"
                               HorizontalOptions="Center" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="seccion1" />
                        </Frame.GestureRecognizers>
                    </Frame>

                    <!-- Sección 2 -->
                    <Frame Padding="15"
                           HasShadow="True"
                           BackgroundColor="White"
                           BorderColor="LightGray"
                           CornerRadius="15"
                           VerticalOptions="Start"
                           HorizontalOptions="FillAndExpand"
                           Margin="10">
                        <Label Text="Lección 2"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="DarkSlateGray"
                               VerticalOptions="Center"
                               HorizontalOptions="Center" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="seccion2" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </StackLayout>

                <!-- Fila 2 -->
                <StackLayout Orientation="Horizontal" Spacing="20">
                    <!-- Sección 3 -->
                    <Frame Padding="15"
                           HasShadow="True"
                           BackgroundColor="White"
                           BorderColor="LightGray"
                           CornerRadius="15"
                           VerticalOptions="Start"
                           HorizontalOptions="FillAndExpand"
                           Margin="10">
                        <Label Text="Lección 3"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="DarkSlateGray"
                               VerticalOptions="Center"
                               HorizontalOptions="Center" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="seccion3" />
                        </Frame.GestureRecognizers>
                    </Frame>

                    <!-- Sección 4 -->
                    <Frame Padding="15"
                           HasShadow="True"
                           BackgroundColor="White"
                           BorderColor="LightGray"
                           CornerRadius="15"
                           VerticalOptions="Start"
                           HorizontalOptions="FillAndExpand"
                           Margin="10">
                        <Label Text="Lección 4"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="DarkSlateGray"
                               VerticalOptions="Center"
                               HorizontalOptions="Center" />
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="seccion4" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>