<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FronEndProyecto.vistas.subtemas.examenTres">
    <ScrollView>
        <StackLayout Padding="10">
            <ContentView x:Name="QuestionContainer"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Anterior" Clicked="OnPreviousClicked" IsEnabled="False" x:Name="PreviousButton"/>
                <Button Text="Siguiente" Clicked="OnNextClicked" x:Name="NextButton"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>